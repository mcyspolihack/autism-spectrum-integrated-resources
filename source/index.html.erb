      ['northOntario', 52.291257, -86.160338, 'https://google.com'],
      ['southOntario', 43.194339, -80.932087, 'https://yahoo.com'],
      ['westOntario', 50.900586, -92.489704, 'https://facebook.com'],
      ['eastOntario', 49.551208, -80.624470, 'https://linkedin.com'],
    ];

    var infowindow = new google.maps.InfoWindow();

    var marker, i;

    for (i = 0; i < locations.length; i++) {
      marker = new google.maps.Marker({
        position: new google.maps.LatLng(locations[i][1], locations[i][2]),
        map: map,
        title: locations[i][0],
        url: locations[i][3]
      });

      google.maps.event.addListener(marker, 'click', loadURL(marker));
    };
  // };




  </script>
</body>
</html>
